<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.DogForm">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Simple dog form"/>
            
            <Label Text="Name: "/>
            <Entry Text="{Binding Name}" Placeholder="enter name"/>

            <Label Text="Race: "/>
            <Entry Text="{Binding Race}" Placeholder="enter race"/>

            <Label Text="Age: "/>
            <Entry Text="{Binding Age}" Placeholder="enter age"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>